#include <iostream>
#include <string>
using namespace std;

int main() {
	// Complete the program
   string a,b,c;
   char d;
   cin>>a>>b;
   int n1=a.length();
   int n2=b.length();
   printf("%d %d\n",n1,n2);
   cout<<a<<b;
   c=a+b;
   d=a[0];
   a[0]=b[0];
   b[0]=d;
   cout<<"\n"<<a<<" "<<b;
    return 0;
}
